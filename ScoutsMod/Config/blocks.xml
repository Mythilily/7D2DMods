<configs>
	<append xpath="/blocks">
		<!-- Scout Horde Config -->
  		<block name="SHConfigBlock">
			<property name="Extends" value="terrDesertGround"/>

			<property class="SHConfigLoad">
				<property name="Logging" value="false"/>
				<!-- This mod generates a random number based on what the user specifies below. SHZombiesMin is the minimum value. SHZombiesMax is the max value. 
					 So SHZombiesMin=10 and SHZombiesMax=30 means the scout horde can have 10 to 30 zombies. It is recommended not to exceed 60 as the max 
					 zombies for FPS reasons -->				
				<property name="SHZombiesMin" value="5" />
				<property name="SHZombiesMax" value="15" />
			</property>
		</block>
	</append>
</configs>